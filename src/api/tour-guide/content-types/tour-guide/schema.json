      "unique": true,
      "regex": "(84|0[3|5|7|8|9])+([0-9]{8})\\b"
    },
    "guide_mail": {
      "type": "email"
    },
    "social_net_link": {
      "type": "string"
    },
    "guide_avt": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "note": {
      "type": "string"
    }
  }
